@model IEnumerable<HasanDemirtasBitirmeProjesi.Entity.Entities.Tag>

@{
    ViewData["Title"] = "AddTagView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group mb-5">
    <label for="tagName">Yeni Tag Adı</label>
    <input type="text" class="form-control" id="tagName" placeholder="Yeni bir tag giriniz" required>

    <button onclick="addTagCategory()" class="btn btn-success mt-1">Ekle</button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                No
            </th>
            <th>
                Tag Adı
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    
    function addTagCategory() {

        var tagName = document.getElementById('tagName').value;
        if (tagName != "") {
            $.ajax({
                type: "POST",
                data: { name: tagName },
                url: "/Admin/AddTag"
            }).done(function () {
                location.reload();

            });;
        }
    }
</script>
